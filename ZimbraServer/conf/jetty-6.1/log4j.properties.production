# This file is used for jetty logging before service webapp is loaded when
# log4j switches to the log4j.properties file in /opt/zimbra/conf.

log4j.threshhold=OFF

log4j.rootLogger=INFO,LOGFILE

# Appender LOGFILE writes to the file "mailbox.log".
log4j.appender.LOGFILE=org.apache.log4j.DailyRollingFileAppender
log4j.appender.LOGFILE.File=/opt/zimbra/log/mailbox.log
log4j.appender.LOGFILE.DatePattern='.'yyyy-MM-dd
log4j.appender.LOGFILE.Append=true
log4j.appender.LOGFILE.layout=org.apache.log4j.PatternLayout
log4j.appender.LOGFILE.layout.ConversionPattern=%d %-5p [%t] %c{1} - %m%n

