if [ x`whoami` != xzimbra ]; then
    echo Error: must be run as zimbra user
	exit 1
fi

platform=`/opt/zimbra/bin/get_plat_tag.sh`

source `dirname $0`/zmshutil || exit 1
zmsetvars \
    zimbra_home \
    zimbra_log_directory

rewriteconfig() {
	/opt/zimbra/bin/zmmtaconfig sasl > /dev/null 2>&1
}

#
# Main
#
case "$1" in
    'start')
		mkdir -p ${zimbra_home}/cyrus-sasl-2.1.21.ZIMBRA/state
		if [ x$2 = "x" ]; then
			rewriteconfig
		fi
		${zimbra_home}/cyrus-sasl-2.1.21.ZIMBRA/sbin/saslauthd -r -a zimbra 
        ;;

    'kill')
		cpid=`cat ${zimbra_home}/cyrus-sasl-2.1.21.ZIMBRA/state/saslauthd.pid`
        kill -TERM "$cpid" 2> /dev/null
        ;;

    'stop')
		if [ -f ${zimbra_home}/cyrus-sasl-2.1.21.ZIMBRA/state/saslauthd.pid ]; then
			cpid=`cat ${zimbra_home}/cyrus-sasl-2.1.21.ZIMBRA/state/saslauthd.pid`
			kill -TERM "$cpid" 2> /dev/null
		fi
		if [ -f ${zimbra_home}/cyrus-sasl-2.1.21.ZIMBRA/state/saslauthd.pid ]; then
			if [ x$platform = "xMACOSX" ]; then
				killall -TERM saslauthd
			else
				killall -TERM ${zimbra_home}/cyrus-sasl-2.1.21.ZIMBRA/sbin/saslauthd
			fi
		fi
        ;;
    
    'restart')
        $0 stop
        $0 start
        ;;
	
	'status')
		cpid=`cat ${zimbra_home}/cyrus-sasl-2.1.21.ZIMBRA/state/saslauthd.pid`
        kill -0 "$cpid" 2> /dev/null
		exit $?
		;;
    
    *)
        echo "Usage: $0 start|stop|kill|restart|status"
        exit 1
        ;;
esac
