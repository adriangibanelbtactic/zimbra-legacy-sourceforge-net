use strict;

BEGIN {
    our $Basedir = "/opt/zimbra/zimbramon";
};
our $Basedir = "/opt/zimbra/zimbramon";

use lib "/opt/zimbra/zimbramon/lib";
use lib "/opt/zimbra/zimbramon/lib/Zimbra/Mon";


use Zimbra::Mon::Logger;
use Zimbra::Mon::Cluster;
use Zimbra::Mon::Daemon;
use Zimbra::Mon::StatusMon;
use Zimbra::Mon::Host;
