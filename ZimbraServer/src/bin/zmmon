use Mail::Mailer;

our $DISK_CRIT_THRESHOLD = 90;
our $DISK_WARN_THRESHOLD = 80;
our $StatusRunning  = 0;
our $StatusStarting = 1;
our $StatusStopped  = 2;
our $StatusStopping = 3;

#my $EventDebug = "debug";
#my $EventInfo  = "info";
#my $EventErr   = "err";
#my $EventCrit  = "crit";
#
#my $EventMsgAppStart      = "appstart: ";
