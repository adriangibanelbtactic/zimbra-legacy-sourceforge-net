BASE=/opt/zimbra
START_ORDER="zmmtaconfigctl mysql.server tomcat "
STOP_ORDER="zmmtaconfigctl tomcat mysql.server"

STATUS=0

case "$1" in 
	start)
		if [ x$2 = "x" ]; then
			/opt/zimbra/libexec/zmmtaconfig mailbox
		fi
		for i in $START_ORDER; do
			/opt/zimbra/bin/$i start norewrite
			R=$?
			if [ $R -ne "0" ]; then
				STATUS=$R
			fi
		done
		exit $STATUS
	;;
	stop)
		for i in $STOP_ORDER; do
			/opt/zimbra/bin/$i stop
			R=$?
			if [ $R -ne "0" ]; then
				STATUS=$R
			fi
		done
		exit $STATUS
	;;
	restart)
		for i in $START_ORDER; do
			/opt/zimbra/bin/$i restart
			R=$?
			if [ $R -ne "0" ]; then
				STATUS=$R
			fi
		done
		exit $STATUS
	;;
	status)
		for i in $START_ORDER; do
			if [ $i = "mysql.server" ]; then
				/opt/zimbra/bin/mysqladmin status > /dev/null 2>&1
			else
				/opt/zimbra/bin/$i status
			fi
			R=$?
			if [ $R -ne "0" ]; then
				echo "$i is not running"
				STATUS=$R
			fi
		done
		exit $STATUS
	;;
	*)
		echo "$0 start|stop|restart|status"
		exit 1
	;;
esac
