BASE=/opt/zimbra
SCRIPTS="tomcat mysql.server"

case "$1" in 
	start)
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i start
		done
	;;
	stop)
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i stop
		done
	;;
	reload)
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i reload
		done
	;;
	status)
		STATUS=0
		for i in $SCRIPTS; do
			if [ $i = "mysql.server" ]; then
				/opt/zimbra/bin/mysqladmin status > /dev/null 2>&1
			else
				/opt/zimbra/bin/$i status
			fi
			R=$?
			if [ $R -ne "0" ]; then
				STATUS=$R
			fi
		done
		exit $STATUS
	;;
	*)
		echo "$0 start|stop|reload|status"
		exit 1
	;;
esac
