SERVER=$1
USER=$2
PASS=$3
MODE=$4
FOLDER=$5

if [ x$MODE = "x" -o x$PASS = "x" -o x$USER = "x" -o x$SERVER = "x" ]; then
	echo "Usage: $0 <server> <user> <pass> <spam|ham> [folder]"
	exit 1
fi

if [ x$FOLDER != "x" ]; then
	FOLDER="-r $FOLDER"
fi

if [ x`whoami` != xzimbra ]; then
    echo Error: must be run as zimbra user
	exit 1
fi

if [ ! -f /usr/bin/fetchmail ]; then
	exit 1;
fi

source `dirname $0`/zmshutil || exit 1
zmsetvars \
	zimbra_home \
	zimbra_server_hostname

echo "server $SERVER user $USER@$SERVER password $PASS keep" > ${zimbra_home}/.fetchmailrc
chmod 600 ${zimbra_home}/.fetchmailrc


/usr/bin/fetchmail -n -a -u $USER $FOLDER -m "${zimbra_home}/bin/sa-learn -p ${zimbra_home}/conf/salocal.cf --dbpath ${zimbra_home}/amavisd/.spamassassin/ --no-sync --showdots -L --${MODE}" ${SERVER}

${zimbra_home}/bin/sa-learn -p ${zimbra_home}/conf/salocal.cf --dbpath ${zimbra_home}/amavisd/.spamassassin/ --sync

rm -f ${zimbra_home}/.fetchmailrc
