if [ x`whoami` != "xzimbra" ]; then
  echo "$0 must be run as user zimbra"
  exit 1
fi

platform=`/opt/zimbra/libexec/get_plat_tag.sh 2> /dev/null` || exit 1
source `dirname $0`/zmshutil || exit 1
zmsetvars \
  zimbra_home \
  zimbra_server_hostname \
  zimbra_tmp_directory \
  zimbra_java_home

zimbra_ssl_directory=${zimbra_home}/ssl/ssl
export JAVA_HOME=${zimbra_java_home}

usage() {
  echo "`basename $0` [zimbra_server_hostname]"
  exit 1
}

zimbra_conf_directory=${zimbra_home}/conf
zimbra_ssl_directory=${zimbra_home}/ssl/ssl

# this avoid "unable to write 'random state' errors from openssl
mkdir -p ${zimbra_tmp_directory}
export RANDFILE=${zimbra_tmp_directory}/.rnd
export HOME=${zimbra_tmp_directory}
touch $RANDFILE

mkdir -p ${zimbra_ssl_directory}/ca
mkdir -p ${zimbra_ssl_directory}/cert
mkdir -p ${zimbra_ssl_directory}/server

if [ $# -gt 1 ]; then
  usage
fi 

if [ "x$1" != "x" ]; then
	zimbra_server_hostname=$1
	shift;
fi

createConf() {

	ALTNAMES=""
	for alt in $*; do
		if [ "x$ALTNAMES" = "x" ]; then
			ALTNAMES="subjectAltName = DNS:${zimbra_server_hostname},DNS:${alt}"
		else
			ALTNAMES="${ALTNAMES},DNS:${alt}"
		fi
	done

	cat ${zimbra_conf_directory}/zmssl.cnf.in | sed -e "s/@@HOSTNAME@@/$zimbra_server_hostname/" \
		-e "s/@@ALTNAMES@@/$ALTNAMES/" > ${zimbra_ssl_directory}/zmssl.cnf
}

createKey() {

	echo "** Creating CA private key"
	echo

	openssl req -batch -config ${zimbra_ssl_directory}/zmssl.cnf \
    -new -newkey rsa:1024 -nodes -out ${zimbra_ssl_directory}/ca/ca.csr \
    -keyout ${zimbra_ssl_directory}/ca/ca.key

}

createCert() {

	echo "** Creating CA cert"
	echo

	openssl x509 -trustout -signkey ${zimbra_ssl_directory}/ca/ca.key \
    -days 365 -req -in ${zimbra_ssl_directory}/ca/ca.csr \
    -out ${zimbra_ssl_directory}/ca/ca.pem

}

createConf "$@"

createKey

createCert

chmod -R 700 ${zimbra_ssl_directory}
