progdir=`dirname $0`

source `dirname $0`/zmshutil || exit 1

zmsetvars \
	zimbra_home \
	zimbra_server_hostname 

rewriteconfig() {
    /opt/zimbra/bin/zmmtaconfig mta > /dev/null 2>&1
}

if [ $1 = "start" -o $1 = "reload" ]; then
	if [ x$2 = "x" ]; then
		rewriteconfig
	fi
fi

if [ $1 = "status" ]; then
	PID=`ps auxww | grep /opt/zimbra/postfix-2.2.3/libexec/master | grep -v grep`
	exit $?
fi

sudo ${zimbra_home}/postfix-2.2.3/sbin/postalias /etc/aliases
sudo ${zimbra_home}/postfix-2.2.3/sbin/postfix $@

