#       echo "#!/bin/bash" > $@/postinst
#       echo "sh /opt/zimbra/bin/zmfixperms.sh" >> $@/postinst
#       cat $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbraspell.post >> $@/postinstall
#       chmod 555 $@/*

spell_pkg_spec_deb: $(SPELL_DEST_ROOT)/DEBIAN/control

$(SPELL_DEST_ROOT)/DEBIAN: force
	mkdir -p $@
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbraspell.pre $@/preinst
	echo "#!/bin/bash" > $@/postinst
	echo "sh /opt/zimbra/bin/zmfixperms.sh" >> $@/postinst
	cat $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbraspell.post >> $@/postinst
	chmod 555 $@/*

$(SPELL_DEST_ROOT)/DEBIAN/control: $(SPELL_DEST_ROOT)/DEBIAN force
	cat $(PACKAGE_CONF_DIR)/Spec/zimbraspell.deb | \
	sed -e 's/@@VERSION@@/$(VERSION_TAG)/' \
	-e 's/@@RELEASE@@/$(RELEASE)/' \
	-e 's/@@ARCH@@/$(ARCH)/' > $@

spell_pkg_spec_rpm: $(BUILD_ROOT)/zimbraspell.spec

$(BUILD_ROOT)/zimbraspell.spec:
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbraspell.pre $(BUILD_ROOT)
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbraspell.post $(BUILD_ROOT)
	cat $(PACKAGE_CONF_DIR)/Spec/zimbraspell.spec | \
		sed -e 's/@@VERSION@@/$(VERSION_TAG)/' \
		-e 's/@@RELEASE@@/$(RELEASE)/' \
		-e 's/^Copyright:/$(RPMCOPYRIGHTSTR):/' \
		-e '/^%pre$$/ r zimbraspell.pre' \
		-e '/^%post$$/ r zimbraspell.post' > $(BUILD_ROOT)/zimbraspell.spec
	rm -f zimbraspell.pre
	rm -f zimbraspell.post
	echo "%attr(-, zimbra, zimbra) /opt/zimbra/$(APACHE_DIR)/htdocs" >> \
		$(BUILD_ROOT)/zimbraspell.spec
	echo "%attr(-, zimbra, zimbra) /opt/zimbra/$(SPELL_DIR)" >> \
		$(BUILD_ROOT)/zimbraspell.spec

spell_stage: $(SPELL_COMPONENTS)

$(SPELL_DEST_DIR):
	mkdir -p $@

$(SPELL_DEST_DIR)/$(SPELL_DIR): $(SPELL_DEST_DIR)
	@echo "*** Creating SPELL"
	(cd $(SPELL_DEST_DIR); tar xzf $(SPELL_SOURCE).tgz;)

$(SPELL_DEST_DIR)/$(APACHE_DIR)/htdocs/aspell.php: $(SPELL_DEST_DIR)/$(APACHE_DIR)/htdocs
	cp $(SERVICE_DIR)/src/php/aspell.php $@
	
$(SPELL_DEST_DIR)/$(APACHE_DIR)/htdocs:
	mkdir -p $@

$(SPELL_DEST_DIR)/$(APACHE_DIR)/htdocs/Zimbra: $(SPELL_DEST_DIR)/$(APACHE_DIR)/htdocs
	cp -R $(SERVICE_DIR)/src/php/Zimbra $@

