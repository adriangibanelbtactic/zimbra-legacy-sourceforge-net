$(STORE_DEST_DIR)/$(MAILBOXD_DIR)/webapps/service/WEB-INF/zimbra.tld: $(ZIMLET_DIR)/build/dist/conf/zimbra.tld
	mkdir -p $(STORE_DEST_DIR)/$(MAILBOXD_DIR)/webapps/service/WEB-INF
