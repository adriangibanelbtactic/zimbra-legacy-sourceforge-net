rm -f /opt/zimbra/mysql
ln -s /opt/zimbra/mysql-standard-4.1.14-apple-darwin8.2.0-powerpc /opt/zimbra/mysql
# Can't get the dylib to hold the correct path...
ln -s /opt/zimbra/mysql-standard-4.1.14-apple-darwin8.2.0-powerpc/lib /opt/zimbra/mysql-standard-4.1.14-apple-darwin8.2.0-powerpc/lib/mysql


H=`hostname -s`

mv /opt/zimbra/db/db.sql /opt/zimbra/db/db.sql.in
sed -e "/server.hostname/ s/local/$H/" /opt/zimbra/db/db.sql.in > /opt/zimbra/db/db.sql

rm -rf /opt/zimbra/tomcat
ln -s /opt/zimbra/jakarta-tomcat-5.5.7 /opt/zimbra/tomcat
mkdir -p /opt/zimbra/tomcat/logs
chown zimbra:zimbra /opt/zimbra/tomcat/logs

mkdir -p /opt/zimbra/convertd
mkdir -p /opt/zimbra/redolog
mkdir -p /opt/zimbra/store
mkdir -p /opt/zimbra/index
mkdir -p /opt/zimbra/backup
chown zimbra:zimbra /opt/zimbra/convertd /opt/zimbra/redolog /opt/zimbra/store /opt/zimbra/index /opt/zimbra/backup 

/bin/sh /opt/zimbra/bin/zmfixperms.sh

egrep -q '^%zimbra.*tomcat' /etc/sudoers
if [ $? != 0 ]; then
	echo "%zimbra ALL=NOPASSWD:/opt/zimbra/libexec/zmtomcatstart" >> /etc/sudoers
fi

su - zimbra -c "mkdir -p /opt/zimbra/tomcat/webapps/service; cd /opt/zimbra/tomcat/webapps/service; jar xf ../service.war"
su - zimbra -c "mkdir -p /opt/zimbra/tomcat/webapps/zimbra; cd /opt/zimbra/tomcat/webapps/zimbra; jar xf ../zimbra.war"

