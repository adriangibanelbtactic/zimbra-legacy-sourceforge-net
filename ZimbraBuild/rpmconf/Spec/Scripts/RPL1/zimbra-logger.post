H=`hostname -s`
I=`hostname -i`

#Symlinks
rm -f /opt/zimbra/logger/mysql
ln -s /opt/zimbra/logger/mysql-standard-5.0.33-pc-linux-gnu-i686-glibc23 /opt/zimbra/logger/mysql

mv /opt/zimbra/db/loggerdb.sql /opt/zimbra/db/loggerdb.sql.in
sed -e "/server.hostname/ s/local/$H/" /opt/zimbra/db/loggerdb.sql.in > /opt/zimbra/db/loggerdb.sql

chown zimbra:zimbra /opt/zimbra/logger

##### install_history
PKG=@@PKGNAME@@
VERSION=@@VERSION@@
INSTALL_HISTORY=/opt/zimbra/.install_history
D=`date +%s`
UPGRADE=`grep "INSTALLED $PKG" $INSTALL_HISTORY`
if [ x"$UPGRADE" = "x" ]; then
  ACTION="INSTALLED"
else
  ACTION="UPGRADED"
fi

if [ $PKG = "zimbra-core" ]; then
  echo "${D}: INSTALL SESSION START" >> $INSTALL_HISTORY
fi

echo "${D}: $ACTION ${PKG}_${VERSION}" >> /opt/zimbra/.install_history

if [ $PKG = "zimbra-store" ]; then
  echo "${D}: INSTALL SESSION COMPLETE" >> $INSTALL_HISTORY
fi

exit 0
