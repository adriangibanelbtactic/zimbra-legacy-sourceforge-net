<zimlet name="com_zimbra_reminder" version="1.5" description="${msg.description}">
	<include>reminder.js</include>
	<includeCSS>reminder.css</includeCSS>
	<resource>reminder.gif</resource>
	<handlerObject>Com_Zimbra_Reminder</handlerObject>

	<zimletPanelItem label="${msg.panel_title}" icon="Reminder-panelIcon">
		<toolTipText>${msg.panel_tooltip}</toolTipText>
		<contextMenu>
			<menuItem label="${msg.update_reminders}" id="GET_NEW" icon="Reminder-reloadIcon"/>
			<menuItem label="${msg.preferences}" id="PREFERENCES" icon="Reminder-settingsIcon"/>
		</contextMenu>
	</zimletPanelItem>

	<userProperties>
		<property type="string" name="remind" label="${msg.pref_remind_before}" />
		<property type="string" name="reload" label="${msg.pref_reload}" />
	</userProperties>
</zimlet>