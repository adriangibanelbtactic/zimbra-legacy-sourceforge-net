<zimlet name="com_zimbra_phone" version="1.2" description="Phone Number">
	<serverExtension hasKeyword="phone" extensionClass="com.zimbra.cs.zimlet.handler.NANPHandler"/>
	<include>phone.js</include>
	<handlerObject>Com_Zimbra_Phone</handlerObject>
	<contentObject type="phone">
		<matchOn>
                  <!--
                      <regex attrs="g">(^|\W)(?:\+1\s+)?(?:(?:\(\d{3}\)[-.\s]?|\d{3}[-.\s]))?\d{3}[-.\s]\d{4}(\W|$)</regex>
                  -->
                  <regex paren="2">(\W|^)((?:(?:\+|00)\d+[-.\s]?)?(?:(?:\(\d{2,3}\)[-.\s]?|\d{2,3}[-.\s]?))?\d{3}[-.\s]?\d{3,4})(\W|$)</regex>
		</matchOn>
		<contextMenu>
			<menuItem label="Search" icon="Search" id="SEARCH"/>
			<menuItem label="Add to Contacts" icon="NewContact" id="ADDCONTACT"/>
			<menuItem label="Skype Call" icon="Telephone" id="CALL"/>
		</contextMenu>
	</contentObject>
</zimlet>
