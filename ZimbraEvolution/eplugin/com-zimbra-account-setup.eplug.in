<?xml version="1.0"?>
<e-plugin-list>
	<e-plugin id="com.zimbra-account-setup" type="shlib" name="Zimbra Account Setup" location="@PLUGINDIR@/libcom-zimbra-account-setup.so" load-on-startup="true">
		<author name="Scott Herscher" email="scott.herscher@zimbra.com"/>
		<description>A plugin to setup zimbra addressbook and calendar sources.</description>
    
		<hook class="org.gnome.evolution.mail.config:1.0">
			<group target="account" id="org.gnome.evolution.mail.config.accountDruid">
				<item type="item_table" path="20.receive_options/30.soapport/50.dummy" factory="com_zimbra_account_setup"/>
			</group>
		</hook>

		<hook class="org.gnome.evolution.mail.config:1.0">
			<group target="account" id="org.gnome.evolution.mail.config.accountEditor">
				<item type="item_table" path="20.receive_options/30.soapport/50.dummy" factory="com_zimbra_account_setup"/>
			</group>
		</hook>

		<hook class="org.gnome.evolution.mail.config:1.0">
			<group target="account" id="org.gnome.evolution.mail.config.accountWizard">
				<item type="item_table" path="20.receive_options/30.soapport/50.dummy" factory="com_zimbra_account_setup"/>
			</group>
		</hook>	

		<hook class="org.gnome.evolution.calendar.config:1.0">
			<group target="source" id="org.gnome.evolution.calendar.calendarProperties">
				<item type="item_table" path="00.general/00.source/00.dummy" factory="com_zimbra_new_calendar_setup"/>
            </group>
		</hook>

        <hook class="org.gnome.evolution.addressbook.config:1.0">
			<group target="source" id="com.novell.evolution.addressbook.config.accountEditor">
				<item type="item" path="00.general/10.display/00.dummy" factory="com_zimbra_new_addressbook_setup"/>
			</group>
		</hook>
	</e-plugin>
</e-plugin-list>
